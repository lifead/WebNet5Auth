@model RegisterUserViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Account" asp-action="Register" method="post" asp-antiforgery="true">
            <h4>Create a new account.</h4>
            <hr>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <input class="form-control" asp-for="UserName" placeholder="Имя пользователя">
                <span asp-validation-summary="UserName"></span>
            </div>
            <div class="form-group">
                <input class="form-control" asp-for="Password" placeholder="Пароль">
                <span asp-validation-summary="Password"></span>
            </div>
            <div class="form-group">
                <input class="form-control" asp-for="ConfirmPassword" placeholder="Введите пароль еще раз ">
                <span asp-validation-summary="ConfirmPassword"></span>
            </div>
            <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>